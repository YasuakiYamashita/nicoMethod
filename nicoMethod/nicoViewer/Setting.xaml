<Window x:Class="nicoViewer.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setting" Height="135" Width="219">
    <Grid>
        <Button Content="起動" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Name="Start"/>
        <TextBox Name="port" HorizontalAlignment="Left" Height="23" Margin="109,10,0,0" TextWrapping="Wrap" Text="5678" VerticalAlignment="Top" Width="80" PreviewKeyDown="NumOnly_PreviewKeyDown" TextChanged="NumOnly_Changed"/>
        <Label Content="受信ポート番号" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="time" HorizontalAlignment="Left" Height="23" Margin="109,38,0,0" TextWrapping="Wrap" Text="5000" VerticalAlignment="Top" Width="80" PreviewKeyDown="NumOnly_PreviewKeyDown" TextChanged="NumOnly_Changed"/>
        <Label Content="表示秒数(ms)" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.659,0.429"/>
        <Button Content="終了" HorizontalAlignment="Left" Margin="90,64,0,0" VerticalAlignment="Top" Width="75" Name="Stop" Click="Stop_Click"/>
    </Grid>
</Window>
