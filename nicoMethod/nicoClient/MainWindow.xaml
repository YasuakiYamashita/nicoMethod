<Window x:Class="nicoServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NicoComment" Height="92" Width="490"
        ResizeMode="NoResize"
        >
    <Grid>
        <Button Content="Send" HorizontalAlignment="Left" Margin="396,10,0,-1" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox Name="comment" HorizontalAlignment="Left" Height="23" Margin="162,10,0,0" TextWrapping="Wrap" Text="" KeyDown="comment_KeyDown" VerticalAlignment="Top" Width="229" />
        <ComboBox Name="Color" SelectedIndex="0" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="71">
            <ComboBoxItem>Color</ComboBoxItem>
            <ComboBoxItem>red</ComboBoxItem>
            <ComboBoxItem>blue</ComboBoxItem>
            <ComboBoxItem>green</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="Size" SelectedIndex="0" HorizontalAlignment="Left" Margin="86,9,0,0" VerticalAlignment="Top" Width="71">
            <ComboBoxItem>Size</ComboBoxItem>
            <ComboBoxItem>Big</ComboBoxItem>
            <ComboBoxItem>Small</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
